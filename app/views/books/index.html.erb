<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('book.title') %></th></th>
      <th><%= t('book.memo') %></th>
      <th><%= t('book.author') %></th>
      <th><%= t('book.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to "#{t('actions.show')}", book %></td>
        <td><%= link_to "#{t('actions.edit')}", edit_book_path(book) %></td>
        <td><%= link_to "#{t('actions.destroy')}", book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{t('actions.new')}", new_book_path %>
